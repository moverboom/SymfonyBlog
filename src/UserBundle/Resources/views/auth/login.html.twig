{% extends 'base.html.twig' %}

{% block body %}
{# app/Resources/views/security/login.html.twig #}
{# ... you will probably extends your base template, like base.html.twig #}

{% if error %}
    <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
    <fieldset class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
    </fieldset>
    <fieldset class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" class="form-control" name="_password" />
    </fieldset>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit" class="btn btn-primary btn-sm">login</button>
</form>
{% endblock %}